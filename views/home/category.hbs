{{#with category}}
<h2>{{name}}</h2>
<div>
    <p>{{description}}</p>
    <button class="btn btn-success" data-toggle="modal" data-target="#myModal">Thêm từ vựng</button>

</div>

<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Thêm mới từ vựng</h4>
      </div>
       <form action="/dict" method="POST">
           <input type="hidden" name="category" value="{{_id}}" />
{{/with}}
      <div class="modal-body ">

            <div class="form-group">
                <label for="name">Tên từ vựng</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Hello" required>
            </div>
            <div class="form-group">
                <label for="pronounce">Phát âm</label>
                <input type="text" class="form-control" id="pronounce" name="pronounce" placeholder="he'lou'" required>
            </div>
            <div class="form-group">
                <label for="optional">Phân loại</label>
                <select class="form-control" id="optional-name" >
                            {{#each optionals}}
                            <option value="{{_id}}">{{nameVi}}</option>
                            {{/each}}
                   </select>
                    <input type="text" required class="form-control"  id="optional" style="margin : 10px 0;" placeholder="Nghĩa">
                    <button type="button" id="addoptional" class="btn btn-primary" >Thêm Nghĩa</button>

            </div>
            <div class="form-group table-responsive">
                <table class="table table-bordered" id="tbOptional">
                    <tr>
                        <th style="width: 20%"> Loại từ </th>
                        <th style="width: 70%"> Nghĩa </th>
                        <th style="width: 10%"> # </th>
                    </tr>
                    <tbody>

                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <label for="example">Ví dụ</label>
               <input type="text" class="form-control"  id="example" style="margin-bottom : 10px;" placeholder="Ví dụ">
                <button type="button" id="addexample" class="btn btn-primary ">Thêm Ví dụ</button>
            </div>
            <div class="form-group table-responsive">
                <table class="table table-bordered" id="tbExample">
                    <tr>
                        <th style="width: 90%"> Ví dụ </th>
                         <th style="width: 10%"> # </th>
                    </tr>
                    <tr>

                    </tr>
                </table>
            </div>

      </div>
      <div class="modal-footer">
        <button class="btn btn-success" >Thêm</button>
      </div>
      </form>
    </div>

  </div>
</div>


<div class="table-responsive">
        <table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Pronounce</th>
            <th>Example</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each dicts}}
        <tr>
            <td>{{@index}}</td>
            <td>{{name}}</td>
            <td>{{pronounce}}</td>
            <td>{{example}}</td>
            <td>
                <a href="/dict-remove/{{_id}}">Remove</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

</div>

